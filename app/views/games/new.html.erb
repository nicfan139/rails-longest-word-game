<div>
  <h1>Welcome to the Longest Word mini-game!</h1>
</div>

<hr>

<% new_grid = Array.new(10) { Array('A'..'Z').sample } %>

<div class="letters-section">
  <ul class="letters">
    <%new_grid.each do |letter|%>
      <li><%= letter %></li>
    <% end %>
  </ul>
</div>

<hr>

<div class="form-section">
  <form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, new_grid %>
    <h2>What is the longest word you can find?</h2>
    <input class="form-input" type="text" name="longest_word">
    <input class="form-btn" type="submit">
  </form>
</div>
